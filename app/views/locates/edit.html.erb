<% if @locate.errors.any? %>
  <div class="ui negative message">
  <i class="close icon"></i>
    <% @locate.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
        <%= form_for(@locate, html: {class: 'ui form'}) do |f| %>
        <div class="ui raised segment">
            
            <div class="field">
              <label>名前</label>
              <%= f.text_field :name, class: "" %>
            </div>
            
            
            <div class="field">
              <label>緯度</label>
              <%= f.number_field :latitude, step: :any, class: "" %>
            </div>
            
            <div class="field">
              <label>経度</label>
              <%= f.number_field :longitude, step: :any, class: "" %>
            </div>
            
          <div class="actions">
            <%= f.submit "登録", class: 'ui button'%>
          </div>
        </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>
